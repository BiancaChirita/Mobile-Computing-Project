<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter email"
        android:id="@+id/txtRegisterEmail"
        android:textColor="@color/colorBlack"
        />

    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter username"
        android:id="@+id/txtRegisterUsername"
        android:layout_below="@id/txtRegisterEmail"
        android:textColor="@color/colorBlack"
        />

    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter password"
        android:id="@+id/txtRegisterPassword"
        android:layout_below="@id/txtRegisterUsername"
        />
    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Confirm password"
        android:id="@+id/txtRegisterConfirmPass"
        android:layout_below="@id/txtRegisterPassword"
        android:textColor="@color/colorBlack"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtRegisterConfirmPass"
        android:text="Register"
        android:id="@+id/btnRegister"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>