<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/relBack">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_left_arrow"
            android:layout_alignParentLeft="true"
            android:id="@+id/ivBackFromGameDetails"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/relGameDetails"
        android:background="@color/colorWhite"
        android:layout_below="@id/relBack"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/ivGameImg"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/ivGameImg"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:text="Name"
            android:textSize="20dp"
            android:id="@+id/txtGameName"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:id="@+id/txtAchievementsNr"
            android:textColor="@color/colorPrimaryDark"
            android:text="24"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@id/txtAchievementsNr"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_star"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/relGameDetails"
        android:id="@+id/relGameDescription"
        android:background="@color/colorWhite"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/txtGameDescription"
            android:textSize="15dp"
            android:text="Description"
            android:textColor="@color/colorPrimaryDark"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relGameDescription"
        android:id="@+id/relGameAchievements"
        >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvAchievements"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_plus"
            android:layout_alignParentRight="true"
            android:id="@+id/ivAddGame"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Add new achievement "
            android:gravity="center"
            android:textSize="15dp"
            android:layout_toLeftOf="@id/ivAddGame"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>

</RelativeLayout>